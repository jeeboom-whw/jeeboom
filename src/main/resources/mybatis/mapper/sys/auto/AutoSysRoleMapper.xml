<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hongwei.moddle.sys.dao.AutoSysRoleDAO">
	<!-- 返回值映射map -->
	<resultMap id="sysRoleMapper" type="com.hongwei.moddle.sys.entity.SysRole">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="createBy" column="create_by" />
		<result property="updateBy" column="update_by" />
	</resultMap>

	<!-- 分页查询数据集合-->
	<select id="selectListByPage" resultMap="sysRoleMapper" >
		<include refid="selectAllColumns"/>
		<include refid="where_fragement" />
		<if test="pager!=null">
			<include refid="pagination_tail" />
		</if>
	</select>

	<!-- 查询总数量 -->
	<select id="selectCount" resultType="long">
		<include refid="count_Tail"></include>
		<include refid="where_fragement"></include>
	</select>

	<!-- 单条查询 -->
	<select id="selectOne" resultMap="sysRoleMapper" >
		<include refid="selectAllColumns"/>
		<include refid="where_fragement" />
	</select>

	<!-- 单条查询 -->
	<select id="selectById" resultMap="sysRoleMapper" >
		<include refid="selectAllColumns"/>
		WHERE record.id = #{id}
	</select>

	<!-- 新增 -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.hongwei.moddle.sys.entity.SysRole">
		INSERT INTO sys_role(
			name,
			status,
			create_time,
			update_time,
			create_by,
			update_by
		) values (
			#{name},
			#{status},
			#{createTime},
			#{updateTime},
			#{createBy},
			#{updateBy}
		)
	</insert>

	<!-- 修改（通过ID只对不为空的内容进行修改 -->
	<update id="updateNotNull" parameterType="com.hongwei.moddle.sys.entity.SysRole">
		UPDATE sys_role record
		<include refid="update_fragement"/>
		WHERE id = #{id}
	</update>

	<!-- 修改（通过ID更新所有属性值） -->
	<update id="updateParams" parameterType="com.hongwei.moddle.sys.entity.SysRole">
		UPDATE sys_role record
		<set>
				record.name = #{name},
				record.status = #{status},
				record.create_time = #{createTime},
				record.update_time = #{updateTime},
				record.create_by = #{createBy},
				record.update_by = #{updateBy}
		</set>
		WHERE id = #{id}
	</update>

	<!--通过ID删除信息-->
	<delete id="deleteById">
		DELETE FROM sys_role
		WHERE id = #{id}
	</delete>

	<!-- 通过IDS批量删除 -->
	<delete id="deleteByIds">
		DELETE FROM sys_role
		WHERE id IN
		<foreach collection="ids" open="(" separator="," close=")" item="id">
			  #{id}
		</foreach>
	</delete>

	<!-- /////////////////// 公共SQL STR ////////////////// -->

	<!-- 查询数量公共sql -->
	<sql id="count_Tail">
		SELECT count(1) FROM sys_role record
	</sql>

	<!-- 分页公共sql -->
	<sql id="pagination_tail">
		<if test="pager.orderBy != null and pager.orderBy != ''">
			ORDER  BY  ${pager.orderBy}
		</if>
	  	limit #{pager.index} , #{pager.pageSize}
	</sql>
	<!-- 查询字段公共sql -->
	<sql id="selectAllColumns">
		<![CDATA[
			SELECT
				id,
				name,
				status,
				create_time,
				update_time,
				create_by,
				update_by
			FROM sys_role record
		]]>
	</sql>

	<sql id="where_fragement">
		WHERE 1=1
		<if test="entity!=null">
				<if test = "entity.id != null">
					<![CDATA[ AND record.id  = #{entity.id} ]]>
				</if>
				<if test = "entity.name != null and entity.name != ''">
					<![CDATA[ AND record.name  LIKE concat('%',#{entity.name},'%') ]]>
				</if>
				<if test = "entity.status != null">
					<![CDATA[ AND record.status  = #{entity.status} ]]>
				</if>
				<if test = "entity.createTime != null">
					<![CDATA[ AND record.create_time  = #{entity.createTime} ]]>
				</if>
				<if test = "entity.updateTime != null">
					<![CDATA[ AND record.update_time  = #{entity.updateTime} ]]>
				</if>
				<if test = "entity.createBy != null">
					<![CDATA[ AND record.create_by  = #{entity.createBy} ]]>
				</if>
				<if test = "entity.updateBy != null">
					<![CDATA[ AND record.update_by  = #{entity.updateBy} ]]>
				</if>
		</if>
	</sql>

	<!--公共修改sql-->
	<sql id="update_fragement">
		<set>
			<if test = "name != null and name != ''">
				record.name = #{name},
			</if>
			<if test = "status != null ">
				record.status = #{status},
			</if>
			<if test = "createTime != null ">
				record.create_time = #{createTime},
			</if>
			<if test = "updateTime != null ">
				record.update_time = #{updateTime},
			</if>
			<if test = "createBy != null ">
				record.create_by = #{createBy},
			</if>
			<if test = "updateBy != null ">
				record.update_by = #{updateBy}
			</if>
		</set>
	</sql>
	<!-- /////////////////// 公共SQL END ////////////////// -->
</mapper>
